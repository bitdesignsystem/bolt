<div class="u-bolt-margin-bottom-medium">
  <bolt-text headline font-size="xlarge">Button Trigger</bolt-text>
  {% include "@bolt-components-button/button.twig" with {
    text: "Open Modal",
    size: "small",
    attributes: {
      onclick: "this.nextElementSibling.show()",
    }
  } only %}
  {% include "@bolt-components-modal/modal.twig" with {
    content: "This modal is triggered by a button.",
  } only %}
</div>

<div class="u-bolt-margin-bottom-medium" style="max-width: 200px">
  <bolt-text headline font-size="xlarge">Image Trigger</bolt-text>
  {% set image_content %}
    {% include "@bolt-components-image/image.twig" with {
      src: "/images/placeholders/tout-4x3-climber.jpg",
      alt: "A Rock Climber",
    } only %}
  {% endset %}

  {% set modal_content %}
    {% include "@bolt-components-trigger/trigger.twig" with {
      content: image_content,
      cursor: "zoom-out",
      display: "block",
      attributes: {
        "on-click": "hide",
        "on-click-target": "js-modal-trigger-image"
      }
    } only %}
  {% endset %}

  {% include "@bolt-components-trigger/trigger.twig" with {
    content: image_content,
    cursor: "zoom-in",
    display: "block",
    attributes: {
      "on-click": "show",
      "on-click-target": "js-modal-trigger-image",
    }
  } only %}

  {% include "@bolt-components-modal/modal.twig" with {
    attributes: {
      class: "js-modal-trigger-image"
    },
    content: modal_content,
    spacing: "none",
    theme: "none",
    scroll: "overall",
  } only %}
</div>

<div class="u-bolt-margin-bottom-medium">
  <bolt-text headline font-size="xlarge">Link Trigger</bolt-text>
  <bolt-text><mark>Warning: this is experimental and should not be replicated on production sites.</mark></bolt-text>
  {% include "@bolt-components-link/link.twig" with {
    text: "Open Modal",
    icon: {
      name: "info-open",
    },
    attributes: {
      onclick: "this.nextElementSibling.show()",
    }
  } only %}
  {% include "@bolt-components-modal/modal.twig" with {
    content: "This modal is triggered by a link.",
  } only %}
</div>
