{% set schema = bolt.data.components["@bolt-components-modal"].schema %}

<bolt-text>The modal container's spacing can be adjusted by the <code>spacing</code> prop. The default is set to <code>medium</code>.</bolt-text>

<bolt-text><mark>Note: this prop only applies to viewports equal to or above the small breakpoint (~600px).</mark></bolt-text>

{% for spacing in schema.properties.spacing.enum %}
  <div class="u-bolt-margin-bottom-medium">
    <bolt-text headline font-size="xlarge">{{ spacing|capitalize }} Spacing</bolt-text>
    {% include "@bolt-components-button/button.twig" with {
      text: "Open Modal",
      size: "small",
      attributes: {
        onclick: "this.nextElementSibling.show()",
      }
    } only %}
    {% include "@bolt-components-modal/modal.twig" with {
      content: "This is a modal set to " ~ spacing ~ " spacing.",
      spacing: spacing,
    } only %}
  </div>
{% endfor %}
