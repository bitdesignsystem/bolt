{% set schema = bolt.data.components["@bolt-components-svg-animations"].schema %}

{% set attributes = create_attribute(attributes | default({})) %}

{% if speed %}
  {% set attributes = attributes.setAttribute("speed", speed) %}
{% endif %}

{% if animType %}
  {% set attributes = attributes.setAttribute("animType", animType) %}
{% endif %}

{% if theme %}
  {% set attributes = attributes.setAttribute("theme", theme) %}
{% endif %}

{% if direction %}
  {% set attributes = attributes.setAttribute("direction", direction) %}
{% endif %}

<bolt-svg-animations {{ attributes }}><slot>{{ content }}</slot></bolt-svg-animations>
